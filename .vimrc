set wildmenu
set ruler
set nocompatible  " vi -> vim

set colorcolumn=99
set number  " line numbers

set hlsearch  " highlighted search
set incsearch  " incremented search

syntax on
set autoindent
set smartindent
set tabstop=4  " tab line is 4
set expandtab  " spaces instead of tab
set shiftwidth=4
set softtabstop=4

filetype on
filetype plugin on
syntax on

set eol
set nowrap

set encoding=utf8
set fileencoding=utf8

set mouse=a
